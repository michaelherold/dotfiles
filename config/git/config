# -*- mode: gitconfig; indent-tab-mode: t; tab-width: 4 -*-
# vim: ft=gitconfig ts=4 sts=4 sw=4 noexpandtab

[alias]
	aa = add --all
	ap = add --patch
	amend = commit --amend
	both = diff HEAD
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	ci = commit -v
	cleanup = "!git merged-to-main | xargs -n 1 git branch -d; git merged-remote | xargs -n 1 git branch -D"
	cpr = co-pr
	dp = diff --patience
	fm = find-migration
	lc = "diff HEAD^1..HEAD"
	lg = log --graph --pretty=format:'%Cred%h%Creset %Cblue<%ae>%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	merged-to-main = !git branch --merged | grep -v "'\\*\\|$(git main-branch)'"
	merged-remote = !git branch -vv | grep ': gone]' | awk '{ print $1 }'
	oss = !git config user.email "opensource@michaeljherold.com"
	pf = push --force-with-lease
	rbm = !git rebase $(git main-branch) --committer-date-is-author-date
	st = status
	staged = diff --cached
	swap-origin = !git remote rename origin upstream && git remote rename michaelherold origin
	undo-commit = reset --soft HEAD^
	unstaged = diff

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold

[commit]
	gpgsign = true
	template = ~/.config/git/message
	verbose = true

[core]
	attributesfile = ~/.config/git/attributes
	excludesfile = ~/.config/git/ignore

[diff]
	colorMoved = zebra

[diff "orgmode"]
	xfuncname = "^(\\*+.*)$"

[diff "rlang"]
	xfuncname = "^([a-zA-z.]+ <- function.*)$"

[diff "rspec"]
	xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario|background)[ \t].*)$"

[diff "texinfo"]
	xfuncname = "^@node[ \t][ \t]*\\([^,][^,]*\\)"

[fetch]
	prune = true

[help]
	autocorrect = 1

[init]
	templatedir = ~/.config/git/template
	defaultBranch = main

[pull]
	ff = only

[push]
	default = current

[rebase]
	autosquash = true

# Rewrite gists to SSH for aliases and when pushing
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	insteadOf = "gist:"

[user]
	signingkey = "E3974749"

[include]
	path = ~/.config/git/config-local
